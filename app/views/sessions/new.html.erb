<div class = "login-container">
    <div class = "login-card">
        <h1>ログイン</h1>
        <%= form_with url: login_path, scope: :session do |f| %>
            <div class = "form-group">
                <%=f.label :email, "メールアドレス" %>
                <%=f.email_field :email, class: "form-control",placeholder: "example@email.com", required: true, autofocus: true %>
                </div>

            <div class = "form-group">
                <%=f.label :password, "パスワード" %>
                <%=f.password_field :password, class: "form-control" %>
            </div>

            <div class = "form-actions">
                <%=f.submit "ログイン", class: "btn btn-primary" %>
            </div>
        <% end %>

        <div class = "login-footer">
        <p>まだアカウントをお持ちでないですか？</p>
        <%=link_to "新規登録", signup_path , class: "btn btn-secondary"%>
        </div>

        </div>
        




</div>

